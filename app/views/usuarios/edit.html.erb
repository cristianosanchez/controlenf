<div class="box">
    <h2>Alterando Usu√°rio</h2>
    <div class="boxContent">

        <%= error_messages_for :usuario %>

        <% form_for(@usuario) do |f| %>
          <p>
            <b>Nome</b><br />
            <%= f.text_field :nome %>
          </p>

          <p>
            <b>Email</b><br />
            <%= f.text_field :email %>
          </p>

          <p>
            <b>Perfil</b><br />
            <%= h "perfil" %>
          </p>

          <p>
            <b>Senha</b><br />
            <%= f.text_field :password %>
          </p>

          <p>
            <%= f.submit "Atualizar" %>
          </p>
        <% end %>
    </div>
</div>